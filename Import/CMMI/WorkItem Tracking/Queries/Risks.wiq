<?xml version="1.0" encoding="utf-8"?>
<WorkItemQuery Version="1">
  <Wiql>
		SELECT [System.Id], [System.IterationPath], [System.State], [System.AssignedTo], [Microsoft.VSTS.Common.Priority], [Microsoft.VSTS.CMMI.Probability], [Microsoft.VSTS.Common.Severity], [System.Title] 	
		FROM WorkItems WHERE [System.TeamProject] = @project  AND  [System.WorkItemType] = 'Risk' 
		ORDER BY [System.Id]
	</Wiql>
</WorkItemQuery>